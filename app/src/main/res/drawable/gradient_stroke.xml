<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="@color/primary_color"
                android:endColor="@color/primary_dark_color"
                android:type="linear" />
            <size android:width="@dimen/_50sdp"
                android:height="@dimen/_50sdp"/>
            <corners android:radius="@dimen/_12sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/bg_edit_text" />
            <corners android:radius="@dimen/_12sdp" />
        </shape>
    </item>

</layer-list>