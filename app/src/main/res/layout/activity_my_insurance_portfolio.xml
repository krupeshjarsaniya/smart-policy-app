                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_portfolio_dropdown"
                            android:maxLines="1"
                            android:text="@string/family_members"
                            android:textSize="@dimen/normal" />

                    </com.google.android.material.textfield.TextInputLayout>-->

                    <!--<com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_margin="@dimen/_8sdp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/primary_color"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_portfolio_dropdown"
                            android:maxLines="1"
                            android:text="@string/type"
                            android:textSize="@dimen/normal" />

                    </com.google.android.material.textfield.TextInputLayout>-->
                    <Spinner
                        android:id="@+id/tv_family_members"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:background="@drawable/bg_portfolio_dropdown"
                        android:padding="@dimen/_8sdp" />
                    <Spinner
                        android:id="@+id/tv_type"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:background="@drawable/bg_portfolio_dropdown"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_12sdp"
                    android:background="@drawable/bg_card_stroke">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/summary"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_4sdp"
                        >

                        <TextView
                            android:layout_width="338dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/no_of_policies"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/normal" />

                        <TextView
                            android:id="@+id/tv_no_of_policies"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:fontFamily="@font/poppins_bold"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/light_grey"
                        android:layout_marginVertical="@dimen/_4sdp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_4sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/annual_premium"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/normal" />

                        <TextView
                            android:id="@+id/tv_annual_premium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="end"
                            android:text="1000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/light_grey"
                        android:layout_marginVertical="@dimen/_4sdp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_4sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/risk_cover"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/normal" />

                        <TextView
                            android:id="@+id/tv_risk_cover"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:fontFamily="@font/poppins_bold"
                            android:text="10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normal" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/bg_rounded_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/insure_details"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/large" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_4sdp"
                        >

                        <TextView
                            android:layout_width="338dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/name"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/normal" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Shikha Batra"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/light_grey"
                        android:layout_marginVertical="@dimen/_4sdp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_4sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/mobile_number"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/normal" />

                        <TextView
                            android:id="@+id/tv_mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="end"
                            android:text="123 456 7890"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normal" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total 0 Policy"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/large"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/primary_color">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/policy"
                                android:textColor="@color/white"
                                android:layout_marginStart="@dimen/_4sdp"
                                />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:src="@drawable/ic_drop_down"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_policies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>